<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="LightGoldenrodYellow"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Dentist.Pages.CabinetModify" 
    Title="Adauga un nou cabinet">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection Title="Cabinet">
                        <EntryCell Label="Nume" Placeholder="Nume" x:Name="txtNume" Keyboard="Text" />
                        <EntryCell Label="Adresa" Placeholder="Adresa" x:Name="txtAdresa" Keyboard="Text" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifica" Clicked="Save_Clicked"/>
        <ToolbarItem Text="Renunta" Clicked="Cancel_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>